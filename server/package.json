{
  "name": "poa-poba-server",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon | pino -c",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --env=jsdom --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "pino": "^4.16.1",
    "plaid": "^2.6.1",
    "truffle-contract": "^3.0.6",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^22.4.4",
    "nodemon": "^1.17.5",
    "prettier": "^1.12.1",
    "supertest": "^3.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/controllers/**/*.js",
      "**/routes/**/*.js",
      "**/etc/**/*.js",
      "*.js",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/*.spec.js",
      "!server/public"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 55,
        "lines": 55,
        "statements": 55
      }
    }
  },
  "engines": {
    "node": ">= 8.9"
  }
}
